/**user_center.wxss**/

.head_item {
  width: 374rpx;
  text-align: center;
  font-size: 30rpx;
  color: #4169e1;
}

.head {
  height:80rpx;
  background-color: #fff;
  border-top: 1rpx solid #fff;
  border-bottom: 1rpx solid rgba(204, 204, 204, 1);
  display: flex;
  align-items: center;
  top: 0;
}

.ring {
  width: 2rpx;
  height: 100%;
  background-color: rgba(204, 204, 204, 1);
}

.help {
  width: 700rpx;
  margin: 0 auto;
}
 
.help .help_item {
  margin: 10rpx auto;
}
 
.help .help_item .title {
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #f2f2f2;
  display: flex;
}
 
.help .help_item .detail {
  margin: 10rpx auto;
  font-size: 25rpx;
  line-height: 40rpx;
}
